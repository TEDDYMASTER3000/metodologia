Algoritmo algoritmico
	Definir cantidad como Real;
	Definir mitad, dolar, euro como Real;
	Escribir "Ingresa la cantidad de Pesos";
	Leer cantidad;
	mitad <- cantidad/2;
	dolar <- mitad/17.86;
	Escribir "La mitad en dolares es: $" dolar;
	
	euro <- mitad/18.93;
	Escribir "La mitad en Euros es: £" euro;
	
FinAlgoritmo
